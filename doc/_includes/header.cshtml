    <header>
      <div class="headercontainer">
        <h1>Space Battle Arena</h1>
        <h2>A Programming Game in Java for AP CS Students.</h2>

        <section id="downloads">
          <a href="@(Context.Settings["SBA.ReleasePath"])/SpaceBattle.jar" class="btn">Download Client Jar</a>
          <a href="@(Context.Settings[Keys.LinkRoot])/client/java_doc/" class="btn">Java Docs</a>
          <a href="@(Context.Settings["SBA.ReleasePath"])/SBAserver.zip" class="btn">Download Server (Windows)</a>
          <a href="@(Context.Settings["SBA.GitHub"])" class="btn btn-github"><span class="icon"></span>View on GitHub</a>
          <a style="position: relative; top: 6px;" href="https://github.com/sponsors/hawkerm"><img src="https://img.shields.io/static/v1?label=Sponsor&message=%E2%9D%A4&logo=GitHub"/></a>
        </section>
      </div>
    </header>

    <nav>
        <div class="container">
            @if (Metadata.String("title") != "Home")
            {
            <span><a href="@(Context.Settings[Keys.LinkRoot])/index.html">Home</a></span>
            }
            @if (ViewData["type"] == "News")
            {
            <span><a href="@Context.GetLink(Context.String(BlogKeys.PostsPath))">News</a></span>
            }
            @if (Metadata.TryGetValue("nav", out IDocument[] docs))
            {
              @foreach (var doc in docs)
              {
                var url = doc.Metadata.String("url"); var title = doc.Metadata.String("title");
                @:&nbsp;<span><a href="@url">@title</a></span>
              }
            }
            @if(@Metadata.String("title") != "Archive")
            {
              <span>@Metadata.String("title")</span>
            }
            else
            {
              <span>News</span>
            }
        </div>
    </nav>
    